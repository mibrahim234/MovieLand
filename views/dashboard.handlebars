<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <h3>{{title}}</h3>
        <h4>{{review}}</h4>
      </div>
      <div class="meta">
      </div>
    </article>
  </li>
  {{/each}}
</ol>


{{#if loggedIn}}
<section class="new-post">
  <div class="hero-body">
    <div class="post-form container mt-6">
      <div class="columns is-centered">
        <div class="column is-4-tablet is-4-desktop is-5-widescreen">
  <form class="box new-post-form">
  <div class="field">
      <h1><b>Create New Post</b></h1>
    <label class="label">Title</label>
    <div class="control">
      <input class="input" type="text" id="title" name="title" placeholder="Enter a title">
    </div>
  </div>

  <div class="field">
    <label class="label">Review</label>
    <div class="control">
      <textarea class="textarea" class="input" id="review" name="review" placeholder="This movie is amazing!"></textarea>
    </div>
  </div>

  <button type="submit" class="button is-info">Create</button>
</form>
 </div>
  </div>
   </div>
  </div>
{{/if}}

