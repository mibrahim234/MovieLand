<section class="new-post">
  <div class="hero-body">
    <div class="post-form container mt-6">
      <div class="columns is-centered">
        <div class="column is-4-tablet is-4-desktop is-5-widescreen">
  <form class="box new-post-form">
  <div class="field">
      <h1><b>Create New Post</b></h1>
    <label class="label">Title</label>
    <div class="control">
      <input class="input" type="text" id="post-title" name="post-title" placeholder="Enter a title">
    </div>
  </div>

  <div class="field">
    <label class="label">Review</label>
    <div class="control">
      <textarea class="textarea" class="input" id="post-url" name="post-url" placeholder="This movie is amazing!"></textarea>
    </div>
  </div>

  <button class="button is-info">Create</button>
</form>
 </div>
  </div>
   </div>
  </div>
  
{{#if posts.length}}
<section class="your-posts">
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/omdb.js"></script>
