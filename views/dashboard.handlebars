<div class="movie-container">
        <div class="row">
          <div class="col border-bottom">
           <div>
             <h3>Search for a Movie:</h3>
             <form id="user-form">
               <input name="movie-search" id="movie-search" type="text" autofocus="true"/>
               <br>
               <button type="submit" class="btn">Search</button>
             </form>
           </div>
          </div>

    <div class="forecast col-8">
          <div id="movie-container-one"></div>            
      </div>


<section class="new-post">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="your-posts">
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/omdb.js"></script>
